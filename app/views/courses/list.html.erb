<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选修课程</h3><br>

        </div>

        <form action="sousuo" method="get">

          <select id="search_type" name="search_type">
            <option value="课程名称" selected="selected">课程名称</option>
            <option value="课程编号">课程编号</option>
            <option value="课程类型">课程类型</option>
            <option value="课程学分">课程学分</option>
            <option value="上课周数">上课周数</option>
            <option value="上课时间">上课时间</option>
            <option value="考试类型">考试类型</option>
          </select>

          <input type="text" id="search" name="course_search" >
          <input type="submit" value="查询" >
        </form>

        <div class="panel-body" style="min-height: 450px">

          <table class="table table-striped table-hover">
            <thead>

            <tr>
              <th>课程编号</th>
              <th>课程名称</th>
              <th>课时/学分</th>
              <th>限选</th>
              <th>已选</th>
              <th>课程属性</th>
              <th>授课方式</th>
              <th>考试方式</th>
              <th>主讲教师</th>

            </tr>
            </thead>
            <tbody>

            <% @course.each do |course| %>
                <tr>
                  <td><%= course.course_code %></td>
                  <td><%= course.name %></td>
                  <td><%= course.credit %></td>
                  <td><%= course.limit_num %></td>
                  <td><%= course.student_num %></td>
                  <td><%= course.course_type %></td>
                  <td><%= course.teaching_type %></td>
                  <td><%= course.exam_type %></td>
                  <td><%= course.teacher.name %></td>
                  <% if course.student_num != course.limit_num %>
                    <td><%= link_to "加入课程", select_course_path(course), class: 'btn-sm btn-info' %></td>
                  <% else %>
                    <td>课程已满</td>
                  <% end %>

                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


