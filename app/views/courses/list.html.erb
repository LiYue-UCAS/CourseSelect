<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选修课程</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>
              <div class="form-group">
                <form>
                <div class="input-group">
                  <div class="input-group-addon">
                    <span class="glyphicon glyphicon-search"></span>
                  </div>
                  <input type="text", class="form-control">
                  </div>
                  <input type="submit" value="搜索" class="btn btn-info btn-block">
                </form>
              </div>
            <tr>
              <th>课程编号</th>
              <th>课程名称</th>
              <th>课时/学分</th>
              <th>限选</th>
              <th>已选</th>
              <th>课程属性</th>
              <th>授课方式</th>
              <th>考试方式</th>
              <th>主讲教师</th>

            </tr>
            </thead>
            <tbody>

            <% @course.each do |course| %>
                <tr>
                  <td><%= course.course_code %></td>
                  <td><%= course.name %></td>
                  <td><%= course.credit %></td>
                  <td><% if course.student_num==course.limit_num %>
                      <div style="color: #ff0000">
                         <%= course.limit_num %>
                      </div>
                      <% else %>
                        <%= course.limit_num %>
                      <% end %>
                  </td>
                  <td><% if course.student_num==course.limit_num %>
                        <div style="color: #ff0000">
                          <%= course.student_num %>
                        </div>
                    <% else %>
                        <%= course.student_num %>
                    <% end %>
                  </td>
                  <td><%= course.course_type %></td>
                  <td><%= course.teaching_type %></td>
                  <td><%= course.exam_type %></td>
                  <td><%= course.teacher.name %></td>
                  <% if (course.student_num == course.limit_num) %>
                  <td>
                    <span style="color:red;">课程已满</span>
                  </td>
                  <% else %>
                      <td><%= link_to "加入课程", select_course_path(course), class: 'btn-sm btn-info' %></td>
                </tr>
                  <% end %>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>